{
  "_ai_rules": {
    "github_dependencies": {
      "langgexyz/*": {
        "version_pattern": "semver:\\^[1-9][0-9]*\\.[0-9]+\\.[0-9]+$",
        "forbidden_patterns": [
          "semver:\\^[0-9]+\\.[0-9]+\\.[0-9]+-[a-zA-Z]",
          "semver:\\^[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+"
        ],
        "description": "package.json 中只能使用稳定版本范围，如 ^1.0.0，禁止直接写预发布版本如 ^1.0.0-alpha.4"
      }
    }
  },
  "name": "gateway-ts-sdk",
  "version": "1.0.3",
  "description": "TypeScript SDK for Gateway WebSocket server",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "prebuild": "npm run clean",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "check": "npm run typecheck",
    "examples:node": "node examples/node.cjs",
    "examples:browser": "echo '\n🌐 浏览器示例:\n   📊 Ping + 订阅 + 发布测试: http://localhost:8080/examples/browser.html\n   🔗 代理测试: http://localhost:8080/examples/proxy.html\n' && npx --yes http-server . -p 8080 -c-1",
    "examples:hook-proxy": "node examples/hook-proxy.cjs"
  },
  "keywords": [
    "websocket",
    "stream",
    "gateway",
    "typescript",
    "sdk",
    "realtime",
    "channel",
    "messaging",
    "browser",
    "nodejs",
    "universal",
    "isomorphic"
  ],
  "author": "Gateway Team",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "dependencies": {
    "class-transformer": "^0.5.1"
  },
  "peerDependencies": {
    "ts-concurrency": "github:langgexyz/ts-concurrency#semver:^1.0.0",
    "ts-streamclient": "github:langgexyz/ts-streamclient#semver:^1.0.0",
    "ts-xutils": "github:langgexyz/ts-xutils#semver:^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/langgexyz/gateway-go-server.git",
    "directory": "gateway-ts-sdk"
  }
}
