{
  "_ai_rules": {
    "github_dependencies": {
      "langgexyz/*": {
        "version_pattern": "semver:\\^[1-9][0-9]*\\.[0-9]+\\.[0-9]+$",
        "forbidden_patterns": [
          "semver:\\^[0-9]+\\.[0-9]+\\.[0-9]+-[a-zA-Z]",
          "semver:\\^[0-9]+\\.[0-9]+\\.[0-9]+\\.[0-9]+"
        ],
        "description": "package.json 中只能使用稳定版本范围，如 ^1.0.0，禁止直接写预发布版本如 ^1.0.0-alpha.4"
      }
    }
  },
  "name": "gateway-ts-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for Stream Gateway WebSocket server",
  "type": "module",
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.js",
  "browser": "dist/umd/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json && find dist/cjs -name '*.js' -exec sh -c 'mv \"$1\" \"${1%.js}.cjs\"' _ {} \\; && find dist/cjs -name '*.cjs' -exec sed -i '' 's/\\.js\"/\\.cjs\"/g' {} \\;",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:umd": "tsc -p tsconfig.umd.json",
    "build:types": "tsc -p tsconfig.types.json",
    "clean": "rm -rf dist/ *.tgz",
    "rebuild": "npm run clean && npm run build",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "check": "npm run typecheck",
    "examples:node": "node examples/node.cjs",
    "examples:browser": "echo '\n🌐 浏览器示例:\n   📊 Ping + 订阅 + 发布测试: http://localhost:8080/examples/browser.html\n   🔗 代理测试: http://localhost:8080/examples/proxy.html\n' && npx --yes http-server . -p 8080 -c-1",
    "examples:hook-proxy": "node examples/hook-proxy.cjs",
    "test": "node scripts/test.cjs",
    "pack": "npm run check && npm run build && npm pack && mv *.tgz packages/",
    "login": "node scripts/login.cjs",
    "release": "npm run check && npm run build && npm pack && mv *.tgz packages/ && echo '✅ Package created successfully!'"
  },
  "keywords": [
    "websocket",
    "stream",
    "gateway",
    "typescript",
    "sdk",
    "realtime",
    "channel",
    "messaging",
    "browser",
    "nodejs",
    "universal",
    "isomorphic"
  ],
  "author": "Stream Gateway Team",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "dependencies": {
    "class-transformer": "^0.5.1",
    "ts-concurrency": "github:langgexyz/ts-concurrency#semver:^1.0.0",
    "ts-streamclient": "github:langgexyz/ts-streamclient#semver:^1.0.0",
    "ts-xutils": "github:langgexyz/ts-xutils#semver:^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "npm-cli-login": "^1.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/langgexyz/gateway-go-server.git",
    "directory": "gateway-ts-sdk"
  }
}
